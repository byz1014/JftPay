<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:paddingTop="10dp"
		android:paddingLeft="10dp">
		<ImageView
			android:id="@+id/iv_icon"
			android:layout_width="25dip"
			android:layout_height="25dip"
			android:layout_centerVertical="true"
			android:background="@drawable/epay"/>
		<ImageView
			android:id="@+id/iv_icon1"
			android:layout_width="96dip"
			android:layout_height="32dip"
			android:layout_centerVertical="true"
			android:background="@drawable/epay"/>
		<TextView
			android:id="@+id/item_tv"
			android:layout_alignLeft="@id/iv_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="35dip"
			android:text="银行卡支付"
			android:textSize="16sp"
			android:textColor="#333333"
			android:layout_alignParentLeft="true"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"/>
		<TextView
			android:id="@+id/tv_pay_desc"
			android:visibility="visible"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="支付说明"
			android:textSize="12sp"
			android:textColor="#2EAFFD"
			android:layout_marginLeft="8dp"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/item_tv" />
		<CheckBox
			android:id="@+id/item_cb"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:button="@null"
			android:checked="false"
			android:clickable="false"
			android:focusable="false"
			android:background="@drawable/selector_check_bg"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="15dp"/>
		<TextView
			android:id="@+id/m_discountamount"
			android:layout_width="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="2dp"
			android:visibility="gone"
			android:textSize="10dp"
			android:layout_toLeftOf="@id/item_cb"
			android:background="@drawable/tv_border"
			android:text="0"
			android:textColor="#E83E27"
			android:layout_height="wrap_content"></TextView>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/rl_preferential"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<com.icbc.ndf.jft.widget.FlowTagLayout
			android:id="@+id/fl_tv_container"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="35dp"
			android:orientation="horizontal" />
		<ImageView
			android:id="@+id/iv_sharp"
			android:layout_width="17dp"
			android:layout_height="17dp"
			android:layout_marginLeft="35dp"
			android:background="@drawable/icbcac"
			android:layout_below="@id/fl_tv_container"
			android:layout_alignLeft="@+id/tv_tab1" />
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="工商银行卡支付立享优惠"
			android:id="@+id/tv_tab_desc"
			android:layout_below="@id/fl_tv_container"
			android:layout_toRightOf="@id/iv_sharp"
			android:layout_marginLeft="2dp"
			android:textSize="13sp"/>
		<ImageView
			android:id="@+id/ic_right"
			android:layout_width="8dp"
			android:layout_height="12dp"
			android:background="@drawable/ic_right"
			android:layout_alignBottom="@+id/tv_tab_desc"
			android:layout_marginBottom="2dp"
			android:layout_marginRight="15dp"
			android:layout_alignRight="@+id/tv_tab_desc" />
	</RelativeLayout>
</LinearLayout>
