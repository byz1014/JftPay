<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jftpay_listview_bg"
    android:padding="8dip">
    <TextView
        android:id="@+id/tv_mername"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:lines="1"
        android:textColor="#3f454b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="北京大北农科技集团股份有限公司"/>
    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:background="@drawable/round_red_bg"
        android:textColor="#fffefe"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="13dp"
        android:text="北京研发中心飞机票"
        android:layout_below="@id/tv_mername"
        android:layout_alignLeft="@+id/tv_mername" />


    <LinearLayout
        android:id="@+id/line"
        android:layout_below="@id/tv_class"
        android:layout_width="fill_parent"
        android:layout_marginLeft="4dp"
        android:layout_alignLeft="@+id/tv_mername"
        android:layout_height="35dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="订单金额"
            android:textSize="14dp"
            android:textColor="#666666"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/pay_amount"
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="889966"
            android:textSize="12dp"
            android:textColor="#3f454b"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linetwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginLeft="4dp"
        android:layout_alignLeft="@+id/tv_mername"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_cb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="14dp"
            android:text="优惠金额"
            android:textColor="#666666"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/discount_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="12dp"
            android:textColor="#3f454b"
            android:paddingTop="2dp"
            android:text="￥555,333,333"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linetwo"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="4dp"
        android:layout_alignLeft="@+id/tv_mername"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="14dp"
            android:text="支付金额"
            android:textColor="#666666"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/realAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="19dp"
            android:textColor="#3f454b"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="￥555,333,333"/>
    </LinearLayout>
</RelativeLayout>
