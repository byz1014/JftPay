<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:clickable="true"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="280dp"
		android:layout_height="220dp"
		android:layout_gravity="center"
		android:background="#ffffff">
		<TextView
			android:id="@+id/message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:lineSpacingMultiplier="1.5"
			android:minHeight="50dp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp" />
		<View
			android:id="@+id/line"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="40dp"
			android:background="#F0BCB9B9"></View>
		<View
			android:id="@+id/line_one"
			android:layout_width="1px"
			android:layout_height="40dp"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"
			android:background="#A19E9E"></View>
		<TextView
			android:id="@+id/tv_clear_close"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:textColor="#FE7E7F"
			android:layout_centerHorizontal="true"
			android:layout_centerInParent="true"
			android:text="否"
			android:layout_marginBottom="4dp"
			android:gravity="center"
			android:layout_toRightOf="@id/line_one"
			android:layout_alignParentBottom="true"/>
		<TextView
			android:id="@+id/tv_clear_ok"
			android:layout_toLeftOf="@id/line_one"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_centerInParent="true"
			android:textColor="#000000"
			android:layout_centerHorizontal="true"
			android:text="是"
			android:layout_alignParentLeft="true"
			android:gravity="center"
			android:layout_marginBottom="4dp"
			android:layout_alignParentBottom="true"/>
	</RelativeLayout>

</FrameLayout>