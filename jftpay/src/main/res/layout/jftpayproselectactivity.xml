<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:background="@color/f4f7f7">
    <RelativeLayout
        android:id="@+id/pay_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/title_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付"
            android:textColor="#FFFFFF"
            android:textSize="17sp"/>
        <ImageView
            android:id="@+id/img_titleback"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/title_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pay_shop"
        android:layout_below="@id/pay_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/title_bg">
        <TextView
            android:id="@+id/m_tx_merch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="店铺:xxxxxxxxx"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tx_merchclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_tx_merch_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:visibility="gone"
            android:maxLines="1"
            android:text="分类"
            android:textColor="#FFFFFF"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/ic_right"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/m_tx_merch_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="-16dp"
            android:layout_toRightOf="@id/m_tx_merch_name"
            android:rotation="180"
            android:src="@drawable/right"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/m_tx_pay_fund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx_merchclass"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:text="￥2000"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:id="@+id/rl_disparent"
            android:layout_below="@id/m_tx_pay_fund">
            <TextView
                android:id="@+id/m_payamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:paddingTop="1dp"
                android:text="￥10001"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_payamount"
                android:visibility="visible"
                android:text="支付剩余时间："
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_alignParentBottom="true"></TextView>

            <Chronometer
                android:id="@+id/contime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/tvtime"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/m_payamount"
                android:layout_marginRight="-65dp"
                android:textColor="@android:color/white"
                android:visibility="visible"></Chronometer>
</RelativeLayout>


    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/pay_selectdef"
        android:layout_below="@id/pay_shop"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_one"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_jft_select_couponcion"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="30dp"
                    android:background="@drawable/jft_select_couponcion"
                    android:layout_height="18dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择优惠券"
                    android:textColor="#666666"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_jft_select_couponcion"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    ></TextView>
                <ImageView
                    android:id="@+id/iv_select_more"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/jft_select_more"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_select_more"
                    android:layout_toLeftOf="@id/iv_select_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去选择"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#999999"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_coupondetail"
                android:visibility="gone"
                android:layout_below="@id/rl_one"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/tv_border_select"
                android:padding="5dip">
                <LinearLayout
                    android:id="@+id/linetwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_alignLeft="@+id/tv_mername"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/main_tv_select_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="优惠券"
                        android:textColor="#222222"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/main_tv_select_youxiaoqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#666666"
                        android:paddingTop="2dp"
                        android:text="有效期至20251010"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="4dp"
                    android:layout_alignLeft="@+id/tv_mername"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/main_tv_select_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="￥10"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:textColor="#ED5541"
                        android:layout_gravity="center"/>
                    <CheckBox
                        android:id="@+id/main_select_item_cb"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:background="@drawable/selector_check_bg"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pay_cv"
        android:layout_below="@+id/pay_selectdef"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择支付方式"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/m_discountamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="6dp"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/tv_border"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="#E83E27"
                    android:textSize="10sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_payList"
                android:divider="@null"
                android:scrollbarTrackVertical="@color/gray_1"
                android:scrollbarThumbVertical="@color/gray"
                android:scrollbarSize="2dp"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="250dp"></ListView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:paddingBottom="22dp"
                android:textColor="#999999"
                android:text="其它支付方式"/>
            <ImageView
                android:layout_toRightOf="@id/tv_other"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:background="@drawable/xiala"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/bt_gopay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/selector_jft_pay_button_bg"
        android:text="去支付"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>
</RelativeLayout>
