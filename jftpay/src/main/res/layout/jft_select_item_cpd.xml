<?xml version="1.0" encoding="utf-8"?>
<!--    android:background="@drawable/jftpay_listview_bg"-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tv_border_select"
    android:padding="8dip">

    <LinearLayout
        android:id="@+id/linetwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_alignLeft="@+id/tv_mername"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_select_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="这是张优惠券"
            android:textColor="#222222"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_select_youxiaoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:textColor="#666666"
            android:paddingTop="2dp"
            android:text="有效期至20251010"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="4dp"
        android:layout_alignLeft="@+id/tv_mername"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_select_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:text="￥10"
            android:textColor="#ED5541"
            android:textSize="16dp"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/select_item_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/selector_check_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
</RelativeLayout>
