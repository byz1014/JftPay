<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="64dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/titletv"
            android:text="支付"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cp"
            android:text="完成"
            android:textColor="#fe7e7f"
            android:textSize="20dp"
            android:layout_marginRight="18dp"
            android:layout_alignTop="@+id/titletv"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title"
        android:background="#eeeeee"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:id="@+id/llpay"
        android:layout_below="@id/title"
        android:weightSum="1">
        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_suce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sucess"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="6dp"
                android:text="成功"
                android:textSize="19dp"
                android:textColor="#fe7e7f"
                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_suce" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sumername"
            android:text="店铺名称"
            android:textSize="17dp"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_suoi"
            android:text="订单号:"
            android:textSize="17dp"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_suoid"
            android:text="交易时间:"
            android:textSize="17dp"
            android:padding="4dp"
            android:textColor="#999999"
            android:layout_weight="0.20"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/bt_gotoshophome"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/llpay"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/pay_button"
            android:text="返回商户"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>